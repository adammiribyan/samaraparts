!!! 5
%html{:lang => "en-US"}
  %head
		%meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
		%title
		  = yield (:title)
		= stylesheet_link_tag "reset", "application"
		= javascript_include_tag :defaults
		= csrf_meta_tag
  %body
		#flashes
		  - flash.each do |key, value|
		    #flash
		      = html_escape(value)
		
		= yield
